<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FroumApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/appBackgroundColor</item>
        <item name="android:actionMenuTextColor">@color/white</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/appColor</item>
        <item name="colorPrimaryDark">@color/logout_red</item>
        <item name="colorAccent">@color/follow_green</item>
        <item name="android:actionMenuTextColor">@color/white</item>
    </style>

    <style name="Remove.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/transparent</item>
    </style>

    <style name="TintedNavigation" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="tint">@color/white</item>
        <item name="android:iconTint">@color/white</item>
    </style>

    <style name="ProfilePicture" parent="">
        <item name="cornerSize">20dp</item>
    </style>

    <style name="ThreadProfilePicture" parent="">
        <item name="cornerSize">5dp</item>
    </style>

    <style name="ThreadPicture" parent="">
    <item name="cornerSize">10dp</item>
    </style>

    <style name="Theme.FroumApp" parent="Base.Theme.FroumApp" />
</resources>